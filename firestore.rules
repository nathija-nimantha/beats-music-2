rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // User documents
    match /users/{userId} {
      allow read: if true; // Anyone can read user docs (for username lookup)
      allow write: if request.auth != null && request.auth.uid == userId; // Users can only write their own doc
    }

    // Songs collection
    match /songs/{songId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Playlists collection
    match /playlists/{playlistId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId; // Users can only read their own playlists
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId; // Users can only write their own playlists
      
      // Liked songs (nested collection inside playlists)
      match /likedSongs/{userId} {
        allow read, write: if request.auth != null && request.auth.uid == userId; // Users can only access their own liked songs
      }
    }

    // Recently played collection
    match /recentlyPlayed/{recentId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId; // Users can only read their own history
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId; // Users can only write their own history
    }

    // Block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
